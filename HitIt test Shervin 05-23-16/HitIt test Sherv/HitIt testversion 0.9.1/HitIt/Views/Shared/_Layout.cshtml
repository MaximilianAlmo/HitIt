<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <div style="background-color:#ae966b" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("HitIt", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, new { @class ="navbar-brand"})</li>
                    <li>@Html.ActionLink("About", "About", "Home", null, new { @class ="navbar-brand"})</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", null, new { @class ="navbar-brand"})</li>
                    @if (Request.IsAuthenticated)
                    {
                        @*<li>@Html.ActionLink("Profile", "Profile", "Home", null, new { @class ="navbar-brand"})</li>*@
                        <li>@Html.ActionLink("Profile", "index", "profile", null, new{ @class = "navbar-brand" }) </li>
                        <li>@Html.ActionLink("Collaborations", "index", "collaboration", null, new { @class = "navbar-brand" }) </li>
                        @*<li>@Html.ActionLink("Collaborations", "Collaborations", "Home", null, new { @class = "navbar-brand" })</li>*@
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - HitIt</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
